.flip-back__wrapper

  .flip-back__title-block
    h2.flip-back__title Authorisation

  form(action="" class="flip-back__form")

    .flip-back__login
      .flip-back__login-icon
        svg(class="svg-vk-dims")
          use(xlink:href="./assets/img/sprite.svg#login" class="icon-color")
      input(type="login" placeholder="login").flip-back__login-input

    .flip-back__password
      .flip-back__password-icon
        svg(class="svg-vk-dims")
          use(xlink:href="./assets/img/sprite.svg#password" class="icon-color")   
      input(type="password" placeholder="password").flip-back__password-input
    
    .flip-back__checkbox
      input(type="checkbox" name="human" id="check" value="yes")
      label(for="check") I am human

    .span.flip-back__text You're not exactly a robot?
    
    .flip-back__radio
      input(type="radio" name="human" id="human1" value="yes").flip-back__radio-input
      label(for="human1").flip-back__radio-label Yes
      input(type="radio" name="human" id="human2" value="no") 
      label(for="human2") Not sure    

  .flip-back__navigation-block
    .flip-back__btn.flip-back__back 
      a(href="./about.html" title="About me") About me
    .flip-back__btn 
      button( value="Войти").flip-back__submit Input